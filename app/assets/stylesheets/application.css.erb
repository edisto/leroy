body {
	background: #3366ff; 
  color:white;
}

.nav {
	height: 150px;
	border-bottom: solid 3px #ffffff; 
}

#logo { 
	background-image: url(<%= asset_path 'logo_01.png' %>);
	background-repeat: no-repeat;
	height: 150px;
}

ul#navMenu li {
	display: inline;
}

.nav a:link {
	color: white;
	font-size: 18px;
	text-decoration:none; 
}

.nav a:visited {
	color: white;
}

.nav a:active {
	text-decoration:underline;
}

.nav a:hover {
	color: white; 
	text-decoration:underline;
}

#contact {
	color: white;
	font-size: 18px; 
	
}
